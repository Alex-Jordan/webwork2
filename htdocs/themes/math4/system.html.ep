%
<link rel="icon" type="x-image/icon"
	href="<%= $c->url({ type => 'webwork', name => 'htdocs', file => 'images/favicon.ico' }) %>">
%
% # CSS Loads
<%= stylesheet $c->url({ type => 'webwork', name => 'theme', file => 'bootstrap.css' }) =%>
<%= stylesheet $c->url({
	type => 'webwork', name => 'htdocs',
	file => 'node_modules/@fortawesome/fontawesome-free/css/all.min.css'
}) =%>
<%= stylesheet $c->url({ type => 'webwork', name => 'theme', file => 'math4.css' }) =%>
<%= content 'css' =%>
% if ($c->exists_theme_file('math4-overrides.css')) {
	<%= stylesheet $c->url({ type => 'webwork', name => 'theme', file => 'math4-overrides.css' }) =%>
% }
%
% # Webwork configuration for javascript
<script>const webworkConfig = { webwork_url: '<%= $c->webwork_url %>' };</script>
%
% # JS Loads
<%= javascript $c->url({ type => 'webwork', name => 'htdocs', file => 'js/apps/MathJaxConfig/mathjax-config.js' }),
	defer => undef =%>
<%= javascript $c->url({ type => 'webwork', name => 'htdocs', file => 'node_modules/mathjax/es5/tex-svg.js' }),
	id => 'MathJax-script', defer => undef =%>
<%= javascript $c->url({ type => 'webwork', name => 'htdocs', file => 'node_modules/jquery/dist/jquery.min.js' }) %>
<%= javascript $c->url({
	type => 'webwork', name => 'htdocs',
	file => 'node_modules/bootstrap/dist/js/bootstrap.bundle.min.js'
	}), defer => undef =%>
<%= javascript $c->url({ type => 'webwork', name => 'theme', file => 'math4.js' }), defer => undef =%>
<%= content 'js' =%>
% if ($c->exists_theme_file('math4-overrides.js')) {
	<%= javascript $c->url({ type => 'webwork', name => 'theme', file => 'math4-overrides.js' }), defer => undef =%>
% }
%
% if ($c->can('head')) {
	<%== $c->head =%>
% }
%
<title><%= $c->path({ style => 'text', text => ' : ', textonly => '1' }) %></title>
</head>
%
<body>
<%= link_to 'Skip to main content' => '#page-title', id => 'stmc-link', class => 'sr-only sr-only-focusable' =%>
%
<div class="container-fluid">
	% # Header
	<div id="masthead" class="row" role="banner">
		<div class="col-md-2 webwork_logo"><%= $c->webwork_logo %></div>
		<div class="col-md-6 institution_logo"><%= $c->institution_logo %></div>
		<div id="login-status" class="col-md-4"><%= include 'ContentGenerator/Base/login_status' %></div>
	</div>
	% # Breadcrumb
	<div id="breadcrumb-row" class="row my-2">
		<div class="col-12 d-flex align-items-center">
			% if ($c->can('links') || $c->can('siblings') || $c->can('options')) {
				<button type="button" class="btn btn-secondary" id="toggle-sidebar">
					<span id="toggle-sidebar-icon">
						<i class="icon fas fa-chevron-left" aria-hidden="true" data-alt="close sidebar"></i>
					</span>
				</button>
			% }
			<nav id="breadcrumb-navigation" aria-label="breadcrumb navigation" class="w-100">
				<ol class="breadcrumb">
					<%= $c->path({ style => 'bootstrap', text => '' }) =%>
				</ol>
			</nav>
		</div>
	</div>
	<div id="body-row" class="d-flex">
		% # Navigation
		% if ($c->can('links') || $c->can('siblings') || $c->can('options')) {
			<div id="site-navigation" class="d-flex flex-column" role="navigation" aria-label="main navigation">
				% if ($c->can('links')) {
					<div id="site-links" class="bg-light"><%= $c->links %></div>
				% }
				% if ($c->can('siblings')) {
					<div id="siblings"><%= $c->siblings %></div>
				% }
				% if ($c->can('options')) {
					<div id="options" class="info-box"><%= $c->options %></div>
				% }
			</div>
		% }
		%
		% # Main Content Area
		<div id="content" class="<%=
			$c->can('links') || $c->can('siblings') || $c->can('options')
				? 'flex-grow-1'
				: 'flex-grow-1 toggle-width' %>">
			%
			% # Navigation, e.g.: Prev, Up, Next for homeworks
			% if ($c->can('nav')) {
				<%= $c->nav({ style => 'buttons', separator => '' }) =%>
			% }
			%
			% # Page Title
			% if ($c->can('page_title')) {
				<div class="row">
					<div class="col-12">
						<h1 id="page-title" class="page-title"><%== $c->page_title %></h1>
					</div>
				</div>
			% }
			%
			% # Message for the user
			% if ($c->can('message')) {
				<div id="message" class="message"><%= $c->message %></div>
			% }
			%
			% # Indicate presence of perl warnings
			% if ($c->have_warnings) {
				<div class="row g-0">
					<div id="alert-error" class="col-12 alert alert-danger"><%== $c->warningMessage %></div>
				</div>
			% }
			%
			% # Display the page body.
			<div class="row">
				<div class="body <%= $c->can('info') ? 'col-md-8' : 'col-12' %>">
					<%= content =%>
				</div>
				% if ($c->can('info')) {
					<div id="info-panel-right" class="col-md-4 mb-md-0 mb-2 order-md-last order-first">
						<div class="info-box">
							<%= $c->info =%>
						</div>
					</div>
				% }
			</div>
			%
			% if ($c->have_warnings) {
				<div id="warnings" class="Warnings alert alert-danger mt-2"><%= $c->warnings %></div>
			% }
			% if ($c->can('message')) {
				<div id="message_bottom" class="message"><%= $c->message %></div>
			% }
		</div>
	</div>
</div>
%
% # Footer
<div id="footer" role="contentinfo"><%= include 'ContentGenerator/Base/footer' %></div>
%
</body>
</html>
